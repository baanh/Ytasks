<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>                    
            <gradient 
                android:startColor="#FF3030"
                android:centerColor="#FF0000"
                android:endColor="#FF3030"
                android:angle="270"
                />
            <stroke android:width="10dp"
                android:color="@android:color/transparent"/>
            <corners android:radius="5dp"/>
            <padding                 
                android:left="5dp"
                android:top="5dp"
                android:bottom="5dp"
                android:right="5dp"/>
        </shape>
    </item>
    <item>
        <shape>            
            <gradient 
                android:startColor="#EE4000"
                android:centerColor="#EE4500"
                android:endColor="#EE4000"
                android:angle="270"/>
            <stroke android:width="10dp"
                android:color="@android:color/transparent"/>
            <corners android:radius="5dp"/>
            <padding                 
                android:left="5dp"
                android:top="5dp"
                android:bottom="5dp"
                android:right="5dp"/>
        </shape>               
    </item>   
    

</selector>
